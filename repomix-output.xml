    private final Map<String, WebSocketSession> sessions = new ConcurrentHashMap<>();

    // ì„¸ì…˜ í™œì„± ìƒíƒœ ì²´í¬ë¥¼ ìœ„í•œ ìŠ¤ì¼€ì¤„ëŸ¬
    private final ScheduledExecutorService scheduler = Executors.newSingleThreadScheduledExecutor();

    // ì„¸ì…˜ë³„ ë§ˆì§€ë§‰ í™œë™ ì‹œê°„ (ì„¸ì…˜ ID -> íƒ€ì„ìŠ¤íƒ¬í”„)
    private final Map<String, Long> lastActivityTime = new ConcurrentHashMap<>();

    // ì—°ê²° íƒ€ì„ì•„ì›ƒ ê¸°ê°„ (30ì´ˆ)
    private static final long SESSION_TIMEOUT = 30000;

    public SignalingHandler() {
        // ì„¸ì…˜ í™œì„± ìƒíƒœ ì²´í¬ ì‘ì—… ìŠ¤ì¼€ì¤„ (10ì´ˆë§ˆë‹¤ ì‹¤í–‰)
        scheduler.scheduleAtFixedRate(this::checkSessionActivity, 10, 10, TimeUnit.SECONDS);
    }

    @Override
    public void afterConnectionEstablished(WebSocketSession session) {
        String sessionId = session.getId();
        sessions.put(sessionId, session);
        lastActivityTime.put(sessionId, System.currentTimeMillis());

        log.info("WebSocket ì—°ê²° ì„±ë¦½: {}", sessionId);

        // ìƒˆ ì‚¬ìš©ìì—ê²Œ í˜„ì¬ ì ‘ì†ì ìˆ˜ì™€ ì„¸ì…˜ ID ì•Œë¦¼
        JSONObject message = new JSONObject();
        message.put("type", "user_count");
        message.put("count", sessions.size());
        message.put("sessionId", sessionId);

        try {
            session.sendMessage(new TextMessage(message.toString()));

            // ë‹¤ë¥¸ ëª¨ë“  ì‚¬ìš©ìì—ê²Œ ìƒˆ ì‚¬ìš©ì ì•Œë¦¼
            JSONObject newUserMsg = new JSONObject();
            newUserMsg.put("type", "new_user");
            newUserMsg.put("id", sessionId);

            broadcast(newUserMsg.toString(), sessionId);

            // ìƒˆ ì‚¬ìš©ìì—ê²Œ ê¸°ì¡´ ì‚¬ìš©ì ëª©ë¡ ì „ì†¡
            for (String existingId : sessions.keySet()) {
                if (!existingId.equals(sessionId)) {
                    JSONObject existingUserMsg = new JSONObject();
                    existingUserMsg.put("type", "new_user");
                    existingUserMsg.put("id", existingId);
                    session.sendMessage(new TextMessage(existingUserMsg.toString()));
                }
            }
        } catch (IOException e) {
            log.error("ë©”ì‹œì§€ ì „ì†¡ ì˜¤ë¥˜", e);
        }
    }

    @Override
    protected void handleTextMessage(WebSocketSession session, TextMessage message) {
        String sessionId = session.getId();
        String payload = message.getPayload();

        // ì„¸ì…˜ í™œë™ ì‹œê°„ ì—…ë°ì´íŠ¸
        lastActivityTime.put(sessionId, System.currentTimeMillis());

        log.debug("ë©”ì‹œì§€ ìˆ˜ì‹ : {} from {}", payload, sessionId);

        try {
            JSONObject jsonMessage = new JSONObject(payload);
            String type = jsonMessage.getString("type");

            // ì±„íŒ… ë©”ì‹œì§€ ì²˜ë¦¬
            if ("chat".equals(type)) {
                // ë°œì‹ ì ID ì¶”ê°€
                jsonMessage.put("from", sessionId);

                // íƒ€ê²Ÿì´ ìˆìœ¼ë©´ íŠ¹ì • ì‚¬ìš©ìì—ê²Œë§Œ ì „ì†¡
                if (jsonMessage.has("target")) {
                    String targetId = jsonMessage.getString("target");
                    WebSocketSession targetSession = sessions.get(targetId);

                    if (targetSession != null && targetSession.isOpen()) {
                        targetSession.sendMessage(new TextMessage(jsonMessage.toString()));
                    }
                } else {
                    // íƒ€ê²Ÿì´ ì—†ìœ¼ë©´ ëª¨ë“  ë‹¤ë¥¸ ì‚¬ìš©ìì—ê²Œ ë¸Œë¡œë“œìºìŠ¤íŠ¸
                    broadcast(jsonMessage.toString(), sessionId);
                }
                return;
            }

            // í•‘ ë©”ì‹œì§€ ì²˜ë¦¬
            if ("ping".equals(type)) {
                JSONObject pongMessage = new JSONObject();
                pongMessage.put("type", "pong");
                session.sendMessage(new TextMessage(pongMessage.toString()));
                return;
            }

            // WebRTC ì‹œê·¸ë„ë§ ë©”ì‹œì§€ ì²˜ë¦¬
            if (jsonMessage.has("target")) {
                String targetId = jsonMessage.getString("target");
                WebSocketSession targetSession = sessions.get(targetId);

                if (targetSession != null && targetSession.isOpen()) {
                    // ë°œì‹ ì ID ì¶”ê°€
                    jsonMessage.put("from", sessionId);
                    targetSession.sendMessage(new TextMessage(jsonMessage.toString()));
                } else {
                    // ëŒ€ìƒ ì„¸ì…˜ì´ ì—†ëŠ” ê²½ìš° ì˜¤ë¥˜ ë©”ì‹œì§€ íšŒì‹ 
                    JSONObject errorMsg = new JSONObject();
                    errorMsg.put("type", "error");
                    errorMsg.put("message", "ëŒ€ìƒ ì‚¬ìš©ìê°€ ì—°ê²°ë˜ì–´ ìˆì§€ ì•ŠìŠµë‹ˆë‹¤.");
                    session.sendMessage(new TextMessage(errorMsg.toString()));
                }
            } else {
                // íƒ€ê²Ÿì´ ì—†ìœ¼ë©´ ëª¨ë“  ë‹¤ë¥¸ ì„¸ì…˜ì— ë¸Œë¡œë“œìºìŠ¤íŠ¸
                jsonMessage.put("from", sessionId);
                broadcast(jsonMessage.toString(), sessionId);
            }
        } catch (Exception e) {
            log.error("ë©”ì‹œì§€ ì²˜ë¦¬ ì˜¤ë¥˜", e);
            try {
                // í´ë¼ì´ì–¸íŠ¸ì— ì˜¤ë¥˜ ì•Œë¦¼
                JSONObject errorMsg = new JSONObject();
                errorMsg.put("type", "error");
                errorMsg.put("message", "ë©”ì‹œì§€ ì²˜ë¦¬ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.");
                session.sendMessage(new TextMessage(errorMsg.toString()));
            } catch (IOException ex) {
                log.error("ì˜¤ë¥˜ ë©”ì‹œì§€ ì „ì†¡ ì‹¤íŒ¨", ex);
            }
        }
    }

    protected void handlePongMessage(WebSocketSession session, PingMessage message) throws Exception {
        // Pong ë©”ì‹œì§€ë¥¼ ë°›ìœ¼ë©´ ì„¸ì…˜ì˜
        String sessionId = session.getId();
        lastActivityTime.put(sessionId, System.currentTimeMillis());
        log.debug("Pong ë©”ì‹œì§€ ìˆ˜ì‹ : {}", sessionId);
    }

    @Override
    public void afterConnectionClosed(WebSocketSession session, CloseStatus status) {
        String sessionId = session.getId();
        sessions.remove(sessionId);
        lastActivityTime.remove(sessionId);

        log.info("WebSocket ì—°ê²° ì¢…ë£Œ: {} - ìƒíƒœ: {}", sessionId, status);

        // ë‹¤ë¥¸ ëª¨ë“  ì‚¬ìš©ìì—ê²Œ ì‚¬ìš©ì í‡´ì¥ ì•Œë¦¼
        JSONObject message = new JSONObject();
        message.put("type", "user_left");
        message.put("id", sessionId);

        broadcast(message.toString(), null);
    }

    @Override
    public void handleTransportError(WebSocketSession session, Throwable exception) {
        String sessionId = session.getId();
        log.error("WebSocket ì „ì†¡ ì˜¤ë¥˜: {}", sessionId, exception);

        // ì—ëŸ¬ ë°œìƒ ì‹œ ì„¸ì…˜ ì •ë¦¬
        try {
            if (session.isOpen()) {
                session.close(CloseStatus.SERVER_ERROR);
            }
        } catch (IOException e) {
            log.error("ì„¸ì…˜ ì¢…ë£Œ ì¤‘ ì˜¤ë¥˜ ë°œìƒ", e);
        } finally {
            sessions.remove(sessionId);
            lastActivityTime.remove(sessionId);

            // ë‹¤ë¥¸ ì‚¬ìš©ìì—ê²Œ ì•Œë¦¼
            JSONObject message = new JSONObject();
            message.put("type", "user_left");
            message.put("id", sessionId);
            broadcast(message.toString(), null);
        }
    }

    /**
     * ëª¨ë“  ì„¸ì…˜ì— ì£¼ê¸°ì ìœ¼ë¡œ Ping ë©”ì‹œì§€ë¥¼ ë³´ë‚´ ì—°ê²° ìƒíƒœ í™•ì¸
     */
    private void checkSessionActivity() {
        long currentTime = System.currentTimeMillis();
        sessions.forEach((id, session) -> {
            try {
                // ë§ˆì§€ë§‰ í™œë™ ì‹œê°„ í™•ì¸
                Long lastActivity = lastActivityTime.get(id);
                if (lastActivity != null && currentTime - lastActivity > SESSION_TIMEOUT) {
                    log.info("ì„¸ì…˜ íƒ€ì„ì•„ì›ƒ: {}", id);
                    session.close(CloseStatus.NORMAL);
                    sessions.remove(id);
                    lastActivityTime.remove(id);

                    // ë‹¤ë¥¸ ì‚¬ìš©ìì—ê²Œ ì•Œë¦¼
                    JSONObject message = new JSONObject();
                    message.put("type", "user_left");
                    message.put("id", id);
                    broadcast(message.toString(), null);
                } else if (session.isOpen()) {
                    // Ping ë©”ì‹œì§€ ì „ì†¡
                    session.sendMessage(new PingMessage(ByteBuffer.wrap("ping".getBytes())));
                }
            } catch (IOException e) {
                log.error("Ping ì „ì†¡ ì¤‘ ì˜¤ë¥˜: {}", id, e);
                try {
                    session.close(CloseStatus.SERVER_ERROR);
                } catch (IOException ex) {
                    log.error("ì„¸ì…˜ ì¢…ë£Œ ì¤‘ ì˜¤ë¥˜", ex);
                }
                sessions.remove(id);
                lastActivityTime.remove(id);
            }
        });
    }

    private void broadcast(String message, String excludeId) {
        sessions.forEach((id, session) -> {
            // ì œì™¸í•  IDê°€ ì—†ê±°ë‚˜ í˜„ì¬ ì„¸ì…˜ IDê°€ ì œì™¸í•  IDì™€ ë‹¤ë¥¸ ê²½ìš°ì—ë§Œ ì „ì†¡
            if ((excludeId == null || !id.equals(excludeId)) && session.isOpen()) {
                try {
                    session.sendMessage(new TextMessage(message));
                } catch (IOException e) {
                    log.error("ë¸Œë¡œë“œìºìŠ¤íŠ¸ ì˜¤ë¥˜: {}", id, e);
                    // ì˜¤ë¥˜ ë°œìƒ ì‹œ ì„¸ì…˜ ì œê±° ì²˜ë¦¬
                    try {
                        session.close(CloseStatus.SERVER_ERROR);
                    } catch (IOException ex) {
                        log.error("ì„¸ì…˜ ì¢…ë£Œ ì¤‘ ì˜¤ë¥˜", ex);
                    }
                    sessions.remove(id);
                    lastActivityTime.remove(id);
                }
            }
        });
    }

    /**
     * ì• í”Œë¦¬ì¼€ì´ì…˜ ì¢…ë£Œ ì‹œ ë¦¬ì†ŒìŠ¤ ì •ë¦¬
     */
    public void destroy() {
        scheduler.shutdown();
        try {
            if (!scheduler.awaitTermination(5, TimeUnit.SECONDS)) {
                scheduler.shutdownNow();
            }
        } catch (InterruptedException e) {
            scheduler.shutdownNow();
            Thread.currentThread().interrupt();
        }
    }
}
